@model RuiRumos74252.Models.BlogPost

<h2>@Model.Title</h2>
<h5>@Model.Content</h5>
<p>Created at: @Model.CreatedAt</p>
@if (!string.IsNullOrEmpty(Model.ImageUrl))
{
    <div>
        <img src="@Model.ImageUrl" alt="Product Picture" width="200" height="200" />
    </div>
}
<br>

<h3>Comments:</h3>
@if (Model.Comments != null && Model.Comments.Count > 0)
{
    foreach (var comment in Model.Comments)
    {
        <p>@comment.Content - By: @comment.Author</p>
    }
}
else
{
    <p>No comments found.</p>
}
<br />

<form asp-controller="Blog" asp-action="AddComment" method="post">
    <input type="hidden" name="blogPostId" value="@Model.Id" />
    <div>
        <label for="content">Comment:</label>
        <textarea name="content" id="content" required></textarea>
    </div>
    <div>
        <label for="author">Author:</label>
        <input type="text" name="author" id="author" required />
    </div>
    <button type="submit">Add Comment</button>
</form>

