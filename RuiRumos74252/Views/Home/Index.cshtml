@{
    ViewData["Title"] = "Home Page";
}

<body>

<section id="hero" class="wow fadeIn">
    <div class="hero-container">
        <h1>Welcome To Botanic74252</h1>
        <h2>
            Everyone deserves a bit of green
        </h2>
        <img src="\assets\img\91250-removebg-preview.png" alt="Hero Imgs" style="height: 350px">
        <a class="btn-get-started scrollto" asp-area="" asp-controller="Products" asp-action="Index">Got to Shop</a>
    </div>
</section>

<section id="get-started" class="padd-section text-center wow fadeInUp">

    <div class="container">
